<%= render partial: "admin/breadcrumbs/breadcrumb", locals: {path: "member_home_pages", title: "Member Home Page", current_page: "Edit Member Home Page Text"} %>
<%= form_for(@member_home_page, as: @member_home_page, url: admin_member_home_page_path(@member_home_page.id), html: { method: :put, :class => "p-20" }) do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
         <div class="panel-heading">
           <h4 class="panel-title">Edit Member Home Page Text</h4>
        </div>
        <div class="panel-body">
          <div class="row">  
            <div class="form-group col-sm-12">
              <label for="reg_input_name" class="req"> Title</label>
              <%=f.text_area :title, :class=>"form-control", id: "title_editor" %>
              <div class = "error error_msg"><%= @member_home_page.errors.messages[:title][0] %></div>
            </div>
          </div> 
          <div class="row">  
            <div class="form-group col-sm-12">
              <label for="reg_input_name" class="req">Description</label>
              <%=f.text_area :description, :class => "form-control", id: "editor" %>
              <div class = "error error_msg"><%= @member_home_page.errors.messages[:description][0] %></div>
            </div>
          </div> 
          <div class="row">
            <div class="col-sm-12 text-center">
              <%= link_to "Cancel", :back, {:class=>"btn join_btn admin-submit-btn"} %>
              <%= f.submit "Submit", :class=>"btn join_btn admin-submit-btn"%>
            </div>
          </div>
        </div>
      </div>
    </div>
    
  </div>
<% end %>
<script>
  CKEDITOR.replace('editor', {
    height: 250,
    extraPlugins: 'colorbutton,colordialog'
  });
  CKEDITOR.replace('title_editor', {
    height: 250,
    extraPlugins: 'colorbutton,colordialog'
  });
</script>           