<%= render partial: "admin/breadcrumbs/breadcrumb", locals: {path: "parta_infos", title: "Part A Info", current_page: "Edit Part A Info"} %>
<%= form_for(@parta_info, as: @parta_info, url: admin_parta_info_path(@parta_info.id), html: { method: :put, :class => "p-20" }) do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
         <div class="panel-heading">
           <h4 class="panel-title">Edit Part A Info/h4>
        </div>
        <div class="panel-body">
				
          <div class="row">  
            <div class="form-group col-sm-6">
              <label for="reg_input_name" class="req">Heading/Subject</label>
              <%=f.text_field :heading_info, :class=>"form-control", :placeholder => "Enter Heading/Subject" %>
              <div class = "error error_msg"><%= @parta_info.errors.messages[:heading_info][0] %></div>
            </div>
          </div>
					
          <div class="row">  
            <div class="form-group col-sm-12">
              <label for="reg_input_name">Body</label>
              <%=f.text_area :body_info, :class=>"form-control", id: "editor" %>
              <div class = "error error_msg"><%= @parta_info.errors.messages[:body_info][0] %></div>
            </div>
          </div>
					
          <div class="row">
            <div class="col-sm-12 text-center">
              <%= link_to "Cancel", :back, {:class=>"btn join_btn admin-submit-btn"} %>
              <%= f.submit "Submit", :class=>"btn join_btn admin-submit-btn"%>
            </div>
          </div>
					
        </div>
      </div>
    </div>
  </div>
<% end %>

<script>
  CKEDITOR.replace('editor', {
    height: 250,
    extraPlugins: 'colorbutton,colordialog'
  });
</script>           