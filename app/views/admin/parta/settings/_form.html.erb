<%= form_for @parta_home_page, :url => url, :html => { :multipart => true, :class => "p-20" },  method: method do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">Part A Home Page Text</h4>
        </div>
        <div class="panel-body">
          <div class="row">  
            <div class="form-group col-sm-12">
              <label for="reg_input_name" class="req">Title</label>
              <%=f.text_field :title, :class=>"form-control", :placeholder => "Enter Title" %>
              <div class = "error error_msg"><%= @parta_home_page.errors.messages[:title][0] %></div>
            </div>
          </div>
          <div class="row">  
            <div class="form-group col-sm-12">
              <label for="reg_input_name" class="req">decription</label>
              <%=f.text_area :banner_text, :class => "ckeditor form-control",:placeholder => "Enter Description", id: 'parta_banner' %>
              <div class = "error error_msg"><%= @parta_home_page.errors.messages[:banner_text][0] %></div>
            </div>
          </div>  
          <div class="row">
            <div class="col-sm-12 text-center">
              <%= f.submit "Save", :class=>"btn join_btn admin-submit-btn"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<script>
  CKEDITOR.replace('parta_banner', {
    height: 250,
    extraPlugins: 'colorbutton,colordialog'
  });
  $( "#dropdown" ).select2({
    // theme: "bootstrap"
  });
</script>  