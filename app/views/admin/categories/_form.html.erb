<%= form_for @category, :url => url, :html => { :multipart => true, :class => "p-20" },  method: method do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">Category</h4>
        </div>
        <div class="panel-body">
          <div class="row">  
            <div class="form-group col-sm-6">
              <label for="reg_input_name" class="req">Name</label>
              <%=f.text_field :name, :class=>"form-control", :placeholder => "Enter Name" %>
              <div class = "error error_msg"><%= @category.errors.messages[:name][0] %></div>
            </div>
          </div>
          <div class="row">  
            <div class="form-group col-sm-12">
              <label for="reg_input_name" class="req">Advice</label>
              <%=f.text_area :advice, :class => "ckeditor form-control",:placeholder => "Enter Advice", id: 'category_advice' %>
              <div class = "error error_msg"><%= @category.errors.messages[:advice][0] %></div>
            </div>
          </div>  
          <div class="row">
            <div class="form-group col-sm-6">
              <label for="reg_input_name">Image</label>
              <%=f.file_field :image_file_name, :class => "form-control",id: "image" %>
            </div>
            <div class="form-group col-sm-6">
              <label for="reg_input_name" class="req">Position</label>
              <%=f.number_field :position, :class => "form-control",id: "position",  "data-validation-confirm" => "required", :placeholder => "Enter Position" %>
              <div class = "error error_msg"><%= @category.errors.messages[:position][0] %></div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12 text-center">
              <%= f.submit "Save", :class=>"btn join_btn admin-submit-btn"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<script>
  CKEDITOR.replace('category_advice', {
    height: 250,
    extraPlugins: 'colorbutton,colordialog'
  });
</script>  