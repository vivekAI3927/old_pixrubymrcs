<%@categories.each_with_index do |x,index|%>
  <tr>
    <td width="15%"><%= x.id %></td>
    <td width="15%"><%= link_to x.name, admin_category_path(x.id) %></td>
    <td width="15%">
      <%= x.position %>
    </td>
    <td width="15%">
      <%= x.stations.count %>
    </td>
    <td width="10%"> 
      <%=link_to admin_category_path(x.id) do%>
        <span class="glyphicon glyphicon-eye-open"></span>
      <%end%>
      <%= link_to edit_admin_category_path(x.id) do|| %>
        <span class="glyphicon glyphicon-pencil" style="color:#1ab394"></span>
      <% end %>
      <%= link_to admin_category_path(x.id), data: { confirm: 'Are you sure you want to delete category '+ x.name, "bootstrap-confirm": 'delete' }, method: :delete do|| %>
        <span class="glyphicon glyphicon-trash" style="color:red"></span>
      <% end %>
    </td>
  </tr>
<% end %>
