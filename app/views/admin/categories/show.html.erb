<%= render partial: "admin/breadcrumbs/breadcrumb", locals: {path: "categories", title: "Categories", current_page: "View Category"} %>  
<div class="content">
  <div class="panel panel-white">
    <div class="panel-heading admin-pannel">
      <%= link_to "Edit Category", edit_admin_category_path(@category.id), class: "join_btn admin-trading-btn" %>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-12">
          <form class="form-horizontal">
            <div class="row">
              <div class="form-group col-sm-5" >
                <label class="col-sm-5 control-label text-muted admin_font">Id.:</label>
                <div class="form-group col-sm-6">
                  <p class="form-control-static"><%= @category.id %></p>
                </div>
              </div>
              <div class="form-group col-sm-5" >
                <label class="col-sm-5 control-label text-muted admin_font">Name:</label>
                <div class="form-group col-sm-6">
                  <p class="form-control-static"><%= @category.name %></p>
                </div>
              </div>
            </div>
            <div id="header"></div>
            <div class="row">
              <div class="form-group col-sm-5">
                <label class="col-sm-5 control-label text-muted admin_font">Created At:</label>
                <div class="form-group col-sm-6">
                  <p class="form-control-static"><%=@category.created_at.strftime("%d-%m-%Y") rescue nil %></p>
                </div>
              </div>
              <div class="form-group col-sm-5" >
                <label class="col-sm-5 control-label text-muted admin_font">Updated At:</label>
                <div class="form-group col-sm-6">
                  <p class="form-control-static"><%=@category.updated_at.strftime("%d-%m-%Y") rescue nil %></p>
                </div>
              </div>
            </div>
            <div id="header"></div>
            <div class="row">
              <div class="form-group col-sm-5" >
                <label class="col-sm-5 control-label text-muted admin_font">Image:</label>
                <div class="form-group col-sm-6">
                  <p class="form-control-static"><td width="15%">
                    <%= link_to image_tag(@category.image.url, alt: "Facebook", :class=> "category-img-circular"), @category.image.url, target: :_blank  rescue nil %>
                      </td>
                  </p>
                </div>
              </div>
              <div class="form-group col-sm-5">
                <label class="col-sm-5 control-label text-muted admin_font">Position:</label>
                <div class="form-group col-sm-6">
                  <p class="form-control-static"><%= @category.position %></p>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>  
