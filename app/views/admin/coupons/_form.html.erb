<%= form_for @coupon, :url => url, :html => { :multipart => true, :class => "p-20" },  method: method do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
         <div class="panel-heading">
           <h4 class="panel-title">Coupon</h4>
        </div>
        <div class="panel-body">
          <div class="row">  
            <div class="form-group col-sm-6">
              <label for="reg_input_name" class="req">Name</label>
              <%=f.text_field :name, :class=>"form-control", :placeholder => "Enter Name" %>
              <div class = "error error_msg"><%= @coupon.errors.messages[:name][0] %></div>
            </div>
            <div class="form-group col-sm-6">
              <label for="reg_input_name" class="req">Discount</label>
              <%=f.text_field :discount, :class => "form-control", :placeholder => "Enter Discount"  %>
              <div class = "error error_msg"><%= @coupon.errors.messages[:discount][0] %></div>
            </div>
          </div>  
          <div class="row">
            <div class="form-group col-sm-6">
              <label for="reg_input_name">Uses</label>
              <%=f.number_field :uses, :class => "form-control",id: "uses" %>
            </div>
          </div>
            
          <div class="row">
            <div class="col-sm-12 text-center">
              <%= f.submit "Save", :class=>"btn join_btn admin-submit-btn"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
