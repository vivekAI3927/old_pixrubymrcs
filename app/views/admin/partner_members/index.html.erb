<%= render partial: "admin/breadcrumbs/breadcrumb", locals: {path: "partner_members", title: "Partners", current_page: "Partner Member List"} %>
<div class="content">
  <div class="row">
  </div>
 </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="grid-view table-responsive" id="student-grid">
        <table class="items">
          <thead>
            <tr>
              <th id="student-grid_c0">Sl.No.</th>
              <th id="student-grid_c2">Name</th>
              <th id="student-grid_c2">Position</th>
              <th id="student-grid_c3">Boi</th>
              <th id="student-grid_c4">Image</th>
              <th class="button-column" id="student-grid_c8">Action</th>
            </tr>
          </thead>
          <tbody class="hole-list">
            <%@partner_members.each_with_index do |x,index|%>
              <tr>
                <td width="10%"><%=index+1%></td>
                <td width="20%"><%= link_to x.name, admin_partner_member_path(x) %></td>
                <td width="10%"><%=x.position %></td>
                <td width="15%"><%= raw x.bio.truncate(100) %></td>
                <td width="10%">
                  <div class="image-flip" >
                    <div class="mainflip flip-0">
                      <div class="frontside">
                        <div class="card">
                          <p>
                            <%= image_tag(x.image_url, size: "80x80") if x.image? %>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
                <td width="10%"> 
                  <%=link_to admin_partner_member_path(x) do%>
                    <span class="glyphicon glyphicon-eye-open"></span>
                  <%end%>
                  <%= link_to edit_admin_partner_member_path(x) do|| %>
                    <span class="glyphicon glyphicon-pencil" style="color:#1ab394"></span>
                  <% end %>
                  <%= link_to admin_partner_member_path(x), data: { confirm: 'Are you sure you want to delete team '+ x.name, "bootstrap-confirm": 'delete' }, method: :delete do|| %>
                     <span class="glyphicon glyphicon-trash" style="color:red"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%if @partner_members.present?%>
          <%= render partial: "admin/paginations/pagination", locals: {all_data: @partner_members} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
