<%= form_for @partner_member, :url => url, :html => { :multipart => true, :class => "p-20" },  method: method do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
         <div class="panel-heading">
           <h4 class="panel-title">Partner Member</h4>
        </div>
        <div class="panel-body">
          <div class="row">  
            <div class="form-group col-sm-6">
              <label for="reg_input_name" class="req">Name</label>
              <%=f.text_field :name, :class=>"form-control", :placeholder => "Enter Name" %>
              <div class = "error error_msg"><%= @partner_member.errors.messages[:name][0] %></div>
            </div>
            <div class="form-group col-sm-6">
              <label for="reg_input_name">Title</label>
              <%=f.text_field :title, :class => "form-control", :placeholder => "Enter Title"  %>
            </div>
          </div>  
          <div class="row">
            <div class="form-group col-sm-6">
              <label for="reg_input_name" class="req">Image</label>
               <%=f.file_field :image, :class=>"form-control" %>
               <div class = "error error_msg"><%= @partner_member.errors.messages[:image][0] %></div>
            </div>
            <div class="form-group col-sm-6">
              <label for="reg_input_name" class="req">Position</label>
               <%=f.number_field :position, :class => "form-control",id: "position",  "data-validation-confirm" => "required", :placeholder => "Enter Position" %>
                <div class = "error error_msg"><%= @partner_member.errors.messages[:position][0] %></div>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-sm-12">
              <label for="reg_input_name" class="req">Bio</label>
              <%=f.text_area :bio, :class => "form-control",:required=>'required',id: "editor1", :placeholder => "Enter Bio"  %>
              <div class = "error error_msg"><%= @partner_member.errors.messages[:bio][0] %></div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12 text-center">
              <%= f.submit "Save", :class=>"btn join_btn admin-submit-btn"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<script>
  CKEDITOR.replace('editor1', {
    height: 250,
    extraPlugins: 'colorbutton,colordialog'
  });
</script>    