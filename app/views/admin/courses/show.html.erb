<%= render partial: "admin/breadcrumbs/breadcrumb", locals: {path: "courses", title: "Courses", current_page: "View Course"} %>  
<div class="content">
  <div class="panel panel-white">
    <div class="panel-heading admin-pannel">
      <%= link_to "Edit Course", edit_admin_course_path(@course.id), class: "join_btn admin-trading-btn" %>
      <%= link_to "Delete Course", admin_course_path(@course.id), data: { confirm: 'Are you sure you want to delete this course', "bootstrap-confirm": 'delete' }, method: :delete, class: "join_btn admin-trading-btn" %>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-12">
          <form class="form-horizontal">
            <div class="row">
              <div class="form-group col-sm-5" >
                <label class="col-sm-5 control-label text-muted admin_font">Id.:</label>
                <div class="form-group col-sm-6">
                  <p class="form-control-static"><%= @course.id rescue nil%></p>
                </div>
              </div>
              <div class="form-group col-sm-5" >
                <label class="col-sm-5 control-label text-muted admin_font">Title:</label>
                <div class="form-group col-sm-6">
                  <p class="form-control-static"><%= @course.title %></p>
                </div>
              </div>
            </div>
            <div id="header"></div>
              <div class="row">
                <div class="form-group col-sm-5">
                  <label class="col-sm-5 control-label text-muted admin_font">Created At:</label>
                  <div class="form-group col-sm-6">
                    <p class="form-control-static"><%=@course.created_at.strftime("%d-%m-%Y") rescue nil %></p>
                  </div>
                </div>
                <div class="form-group col-sm-5" >
                  <label class="col-sm-5 control-label text-muted admin_font">Updated At:</label>
                  <div class="form-group col-sm-6">
                    <p class="form-control-static"><%=@course.updated_at.strftime("%d-%m-%Y") rescue nil %></p>
                  </div>
                </div>
              </div>
              <div id="header"></div>
              <div class="row">
                <div class="form-group col-sm-12" >
                  <label class="col-sm-12 control-label text-muted admin_font">Description:</label>
                  <div class="form-group col-sm-12">
                    <p class="form-control-static"><%= @course.description.html_safe %></p>
                  </div>
                </div>
              </div>
              <div id="header"></div>
              <div class="row">
                <div class="form-group col-sm-5">
                  <label class="col-sm-5 control-label text-muted admin_font">Available:</label>
                  <div class="form-group col-sm-6">
                    <p class="form-control-static"><%= @course.available %></p>
                  </div>
                </div>
                <div class="form-group col-sm-5" >
                  <label class="col-sm-5 control-label text-muted admin_font">Image File Name:</label>
                  <div class="form-group col-sm-6">
                    <p class="form-control-static"><%=@course.image_file_name %></p>
                  </div>
                </div>
              </div>
              <div id="header"></div>
              <div class="row">
                <div class="form-group col-sm-5" >
                  <label class="col-sm-5 control-label text-muted admin_font">Image:</label>
                  <div class="form-group col-sm-6">
                    <p class="form-control-static"><td width="15%">
                    <%= link_to image_tag(@course.image.url, alt: "Facebook", :class=> "category-img-circular"), @course.image.url, target: :_blank rescue nil %>
                    </td></p>
                  </div>
                </div>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>  
