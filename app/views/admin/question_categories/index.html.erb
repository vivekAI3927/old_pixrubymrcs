<%= render partial: "admin/breadcrumbs/breadcrumb", locals: {path: "question_categories", title: "Category Question", current_page: "Category Question"} %>
<div class="content">
  <div class="row">
    <div class="col-sm-12">
      <div class="grid-view table-responsive" id="student-grid">
        <table class="items">
          <thead>
            <tr>
              <th id="student-grid_c0"><%= sortable "id" %></th>
              <th id="student-grid_c2"><%= sortable "title" %></th>
              <th id="student-grid_c1"><%= sortable "no_of_question" %></th>
              <th class="button-column" id="student-grid_c7">Action</th>
            </tr>
          </thead>
          <tbody class="hole-list">
            <%@question_categories.each_with_index do |x,index|%>
                <tr>
                  <td width="5%"><%= x.id %></td>
                  <td width="15%"><%= x.title %></td>
                  <td width="15%"><%= x.no_of_question %></td>
                  <td width="10%"> 
                    <%= link_to edit_admin_question_category_path(x) do|| %>
                      <span class="glyphicon glyphicon-pencil" style="color:#1ab394"></span>
                    <% end %>
                  </td>
                </tr>
              <%end%>
          </tbody>
        </table>
        <%if @question_categories.present?%>
          <%= render partial: "admin/paginations/pagination", locals: {all_data: @question_categories} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
