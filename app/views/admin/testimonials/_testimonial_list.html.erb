<%@testimonials.each_with_index do |x,index|%>
  <tr>
    <td width="5%"><%=index+1%></td>
    <td width="15%"><%= link_to x.id, admin_testimonial_path(x) %></td>
    <td width="20%"><%=x.author %></td>
    <td width="15%"><%= x.content  %></td>
    <td width="10%"> 
      <%=link_to admin_testimonial_path(x) do%>
        <span class="glyphicon glyphicon-eye-open"></span>
      <%end%>
      <%= link_to edit_admin_testimonial_path(x) do|| %>
        <span class="glyphicon glyphicon-pencil" style="color:#1ab394"></span>
      <% end %>
      <%= link_to admin_testimonial_path(x), data: { confirm: 'Are you sure you want to delete testimonial '+ x.author, "bootstrap-confirm": 'delete' }, method: :delete do|| %>
         <span class="glyphicon glyphicon-trash" style="color:red"></span>
      <% end %>
    </td>
    <td width="15%" id="pdf_link">
       <%= link_to admin_testimonial_download_pdf_path(x.id), :class => "btn btn-primary" do %>
        Download as Pdf <i class="fa fa-download"></i></a> 
      <% end %>
    </td>
  </tr>
<%end%>
