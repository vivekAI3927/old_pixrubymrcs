<% @about_us.each_with_index do |x,index|%>
  <tr>
    <td width="5%"><%= link_to x.id, admin_about_path(x.id) %></td>
    <td width="15%"><%= truncate(x.description, escape: false, length:200) %></td>
    <td width="15%"><%=x.created_at.strftime("%d-%m-%Y") rescue nil %></td>
    <td width="15%"><%=x.updated_at.strftime("%d-%m-%Y") rescue nil %></td>
    <td width="15%"><%#= x.image %> <%#= image_tag(x.image_url, size: "80x80") if x.image? %>
      <%= link_to image_tag(x.image_url, alt: "Facebook", size: "80x80"), x.image_url, target: :_blank if x.image? %>
    </td>
    <td width="10%"> 
      <%=link_to admin_about_path(x) do%>
        <span class="glyphicon glyphicon-eye-open"></span>
      <%end%>
      <%= link_to edit_admin_about_path(x) do|| %>
        <span class="glyphicon glyphicon-pencil" style="color:#1ab394"></span>
      <% end %>
    </td>
  </tr>
<%end%>
<style>

.grid-view table.items td {
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
    padding: 0.7em;
    padding-left: 1.2em;
    padding-right: 0.2em;
    color: #0b0b0b;
    text-align: left;
    font-weight: 900;
    font-size: 14px;
}

 </style>


