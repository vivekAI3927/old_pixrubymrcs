<%= form_for :recommend, url: recommends_path ,html: {id: "recommend"}, class: "recommend" do |form| %>
<div class="form-group">
    <label for="exampleFormControlInput1">Your Name</label>
    <%= form.text_field :name,:class=>"form-control",:placeholder=>"Enter Your Name" %>
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Recommend Us</label>
    <%= form.email_field :email,:class=>"form-control",:placeholder=>"Enter Your Friend's Email" %>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Recommend to Friends</label>
    <%= form.text_area :description,:class=>"form-control",:placeholder=>"Write somthing to your friend", :rows => 3 %>
  </div>
  <%= form.submit 'Recommend', :class => "btn btn-large"%>
<% end%>
