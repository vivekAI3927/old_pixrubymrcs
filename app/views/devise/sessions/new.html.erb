                                    <!-- <td width="18px">
                                        <label class="check-bx">
                                            <input type="checkbox"><span class="checkmark"></span></label>
                                    </td>
                                    <td><font>By clicking here you agree to our<a class="trms-link" href="#"> privacy  terms</a></font></td> -->
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
              <%= f.submit "Log in", class:"sign-frm-btn" %>
            </div>
            <div class="form-group"><input class="sign-frm-btn" onclick="location.href = '/users/sign_up';" type="button" value="Create an account"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 checkbx-align">
                       <%#= render "devise/shared/links" %>

                    </div>
                </div>
            </div>
