%section.organic-breadcrumb.cat-breadcrumb
  .container
    .breadcrumb-banner.cat-banner.d-flex.flex-wrap.align-items-center.justify-content-end
      .col-first
        %h1= @category.name
%section.how-it-works.pt-100.pb-50
  .container
    .row             
      .col-md-12
        #category_advice
          = @category.advice.html_safe
          - percentage = @category.percentage(@category.id, current_user.id)
          %section.account-inner-sec.cat-inner-section
            .bs-example
              %span
                .progress
                  .progress-bar.bg-warning{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{percentage}", :role => "progressbar", :style => "width: #{percentage}%;"}  #{percentage}%
                - if @category.name == "Anatomy"  
                  = link_to('Open Aclandâ€™s Anatomy', " https://www.aclandanatomy.com",  { target: '_blank', class: 'join_btn trading-btn' })
          %br/
      .col-md-12
        = render partial: "/shared/station", locals: {stations: @stations, category: @category}
