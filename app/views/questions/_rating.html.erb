<% if current_user.present? %>
  <div class="tab_body">
    <div id="review-rating">
      <%= form_for :rating, url: ratings_path ,html: {class: "add_comments", id: "add-comments"}, remote: true do |f| %>
      <h4 class="card-title">Enter your feedback/changes for this station.</h3>
      <%= f.hidden_field :rating_id, :value=> @rating.id %>

      <ul class="comments">
      <div class="evaluation">
        <div class="quality">
    
           <%= f.text_area :review, class: "form-control" , required: true, rows: 6 %>
        </div>
      </div><br>
      <div class="your_review">
      </div>
      <div class="clear"></div>
      <%= f.hidden_field :question_id, :value=> @question.id %>
      <%= f.hidden_field :station_id, :value=> @station.id %>
      <%= f.hidden_field :user_id, :value=> current_user.id %>
      <div class="text_review">
      </div>
      <div class="form-group">
        <%= render partial: 'questions/button', locals: {question: @question, station: @station }%>
      </div>
      <%end %>
      </ul>
    </div>
  </div>
<% end %>