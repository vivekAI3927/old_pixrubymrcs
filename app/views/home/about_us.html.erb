<section class="organic-breadcrumb op-organic">
  <div class="container">
    <div class="about-box d-flex flex-wrap align-items-center justify-content-end">
      <div class="col-first">
        <h1>OUR PEOPLE</h1>
      </div>
    </div>
  </div>
</section>

<!-- Team -->
<section id="team">
    <div class="container">
        <div class="row">
            <!-- Team member -->
            <% Team.all.each do |team| %>
              <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="frontside">
                  <div class="card">
                      <div class="card-body text-center" style="padding: 0px;">
                        <p>
                          <!-- <img class=" img-fluid" src="https://sunlimetech.com/portfolio/boot4menu/assets/imgs/team/img_01.png" alt="card image"> -->
                          <a class="trms-link" href="#" data-toggle="modal" data-target="#teamBio_<%= team.id %>" style="text-decoration: none;">
                            <%= image_tag(team.image_url, class: "img-fluid") if team.image?%>
                          </a><br/>
                          <a class="join_btn trading-btn page-scroll" href="#" data-toggle="modal" data-target="#teamBio_<%= team.id %>" style="text-decoration: none;">BIO</a>
                        </p>
                        <h4 class="card-title"><%= team.name %></h4>
                        <p class="card-text"><%= team.title %></p>
                        <!-- <a href="#" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i></a> -->
                    </div>
                  </div>
                </div>
              </div>
                <div class="modal fade" id="teamBio_<%= team.id %>" tabindex="-1" role="dialog" aria-labelledby="termconditionTitle" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered aa" role="document" style="margin-top: 0px !important;">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle"><%= team.name %> Bio:</h5>

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body"  style="overflow-x: auto; max-height: 400px;">
                        
                        <%= team.bio.try(:html_safe) %>

                      </div>
                      <div class="modal-footer">
                        <button type="button" class="pop_up_close_btn pop_up_btn" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div> 
            <% end %>  
        </div>
    </div>
</section>
