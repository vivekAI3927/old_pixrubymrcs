$('#status-links').html("<%= escape_javascript render(:partial => 'shared/category_status_links', category: @category )%>")
<% if @parta_category_status.todo %>
  $( "#todo" ).addClass( 'badge-danger' );
  $( "#flagged" ).removeClass( 'badge-secondary' );
  $( "#done" ).removeClass( 'badge-secondary' );

<% elsif @parta_category_status.flagged %>
  $( "#flagged" ).addClass( 'badge-warning' );
  $( "#todo" ).removeClass( 'badge-secondary' );
  $( "#done" ).removeClass( 'badge-secondary' );
<% elsif @parta_category_status.done %>
  $( "#done" ).addClass( 'badge-success' );
  $( "#flagged" ).removeClass( 'badge-secondary' );
  $( "#todo" ).removeClass( 'badge-secondary' );
<% end %>