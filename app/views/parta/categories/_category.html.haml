    .row
      .bs-example
        #accordionExample.accordion
          .card
            #headingTwo.card-header
              %h2.mb-0
                %button.btn.btn-link{"data-target" => "#demo#{category.id}", "data-toggle" => "collapse", :type => "button"}
                  #{category.name}
                  - percentage = category.percentage(category.id, current_parta_user.id)
                  %span
                    .progress
                      .progress-bar.bg-warning{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{percentage}", :role => "progressbar", :style => "width: #{percentage}%;"}  #{percentage}%

                  %i.fa.fa-plus
            .collapse{"aria-labelledby" => "headingTwo", :id => "demo#{category.id}"}
              .card-body
                = category.description.html_safe
                %br/
                = link_to 'Practice', parta_category_path(category), class: 'join_btn trading-btn'
